---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
let currentPath = Astro.url.pathname;
---

<Layout title="Documentación FullStack">
	<div class="pageTitle">
		<h1>Fundamentals</h1>
		<img src="/astro-proyect/images/filled_icon.svg" alt="logo_programacion" class="logo_codigo">
	</div>
	<ul role="list" class="link-card-grid">
		<Card
			href=`${currentPath}html/`
			title="HTML"
			description="Descripción de HTML"
		/>
		<Card
			href=`${currentPath}css/`
			title="CSS"
			description="Descripción del CSS"
		/>
		<Card
			href=`${currentPath}javascript/`
			title="JavaScript"
			description="Descripcion del Javascript"
		/>

	</ul>
</Layout>
